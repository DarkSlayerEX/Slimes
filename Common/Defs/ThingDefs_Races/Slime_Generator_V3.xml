	<!-- Steel -->
	<Slimes.SlimeGeneratorDef>
		<defName>Steel_Slime</defName>
		<label>steelslime</label>
		<description>A steel slime</description>
		<slimeTypeDef>Metal_Slime</slimeTypeDef>
		<sourceThingDef>Steel</sourceThingDef>
		<color>(105,105,105)</color> <!-- Optional: Overrides color tag taken from sourceThingDef -->
		<statModifiers>
			<offsets>
				<MoveSpeed>0.5</MoveSpeed>
			</offsets>
		</statModifiers>
		<raceModifiers />
		<butcherThings>
		    <butcherBasic> <!-- only leather/meat - Vanilla recipe -->
				<Steel>2</Steel> 
		    </butcherBasic>
			<butcherSpecialized> <!-- butcherBasic + following defs - Specialized recipe -->
				<oneOf>
					<li> <!-- chooses only one of these -->
						<thingDef>ChunkSlagSteel</thingDef> 
						<yieldRange>1~2</yieldRange>
					</li>
					<li>
						<thingDef>ComponentIndustrial</thingDef> 
						<yieldRange>1~2</yieldRange>
					</li>
				</oneOf>
				<allOf> <!-- adds all of these to output -->
					<li>
						<thingDef>Steel</thingDef> 
						<yieldRange>6~8</yieldRange>
					</li>
				</allOf>
			</butcherSpecialized>
		</butcherThings>
	</Slimes.SlimeGeneratorDef>

